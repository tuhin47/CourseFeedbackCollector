<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nihal.reviewerandroidportion.StudentProfile.SelectionCourseTrail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course list for 3/1  :"
        android:textSize="26dp"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:textColor="#000000"/>


        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:onClick="databaseclicked"
            android:text="Database management system"
            android:layout_gravity="center"
            android:layout_margin="12dp"/>


        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="datacomclicked"
            android:text="Data Communication"
            android:layout_gravity="center"
            android:layout_margin="12dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="microclicked"
            android:text="MicroProcessor"
            android:layout_gravity="center"
            android:layout_margin="12dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="operatingSystem"
            android:text="Operating System"
            android:layout_gravity="center"
            android:layout_margin="12dp"/>

        </LinearLayout>



</android.support.constraint.ConstraintLayout>
