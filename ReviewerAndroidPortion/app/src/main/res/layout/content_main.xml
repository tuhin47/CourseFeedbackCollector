<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teachers Reviewer"
        android:textSize="30dp"
        android:layout_margin="26dp"
        android:gravity="center_horizontal"/>
    <ImageView
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/reviewapplogo"/>
    <Button
        android:id="@+id/account_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a new account"
        android:layout_margin="20dp"
        android:background="#B2FF59"
        android:padding="20dp"
        />

    <Button
        android:id="@+id/giveReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give review"
        android:background="#B2FF59"
        android:padding="20dp"
        />

    <TextView
        android:id="@+id/account_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Have an account?Sign in"
        android:textSize="23dp"
        android:gravity="center_horizontal"/>

</LinearLayout>
