<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_course_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/review_course_stu"
        android:onClick="semisterChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="review courses"
        android:padding="30dp"
        android:layout_gravity="center"
        android:layout_margin="40dp"/>

    <Button
        android:id="@+id/view_course_stat_stu"
        android:onClick="statisticsShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view statistics"
        android:padding="30dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>
</LinearLayout>
