<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/teacher_Login"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teachers Reviewer"
            android:textSize="30dp"
            android:layout_margin="26dp"
            android:gravity="center_horizontal"/>
        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/reviewapplogo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your user name"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/user_id_tea"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/box_edittext_drawable"
            android:padding="8dp"
            android:inputType="text"
            android:hint="Email"
            android:textSize="15sp"
            android:textColorHint="#4A000000"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your Password"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/password_te"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:inputType="textPassword"
            android:background="@drawable/box_edittext_drawable"
            android:padding="8dp"
            android:hint="Password"
            android:textColorHint="#4A000000"
            android:textSize="15sp"
            />


        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Login"
            android:layout_margin="50dp"
            />
    </LinearLayout>

</ScrollView>

